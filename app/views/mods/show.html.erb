<div class="row">

  <div class="col-md-3">
    <div class="btn-group btn-group-justified">
      <%= link_to 'Download', download_mod_path, class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Subscribe', subscribe_mod_path, class: 'btn btn-success btn-lg' %>
    </div>

    <br />

    <div align="center"><i><%= link_to 'Whats the difference?', faq_pages_path %></i></div>
  </div>

  <div class="col-md-9">

    <div class="thumbnail">
      <%= image_tag @mod.image.url %>
      <div class="caption-full">
        <h4 class="pull-right">Version <%= @mod.version %></h4>
        <h4><a href="#"><%= @mod.name %></a></h4>
        <%= @mod.description %>
        <%= link_to 'YouTube Documentation', @mod.youtube_url %>
      </div>
      <div class="ratings">
        <p class="pull-right">
          <%= @mod.download_count %> downloads<br />
          <%= @mod.vote_tally %> likes
        </p>

        <%
            like_class = (current_account.voted_up_on? @mod) ? 'success' : 'primary'
            dislike_class = (current_account.voted_down_on? @mod) ? 'danger' : 'primary'
        %>
        <p>
          <span class="label label-default"></span>
          <%= link_to fa_icon('thumbs-up'), like_mod_path, class: 'btn btn-sm btn-' + like_class %>
          <%= link_to fa_icon('thumbs-down'), dislike_mod_path, class: 'btn btn-sm btn-' + dislike_class %>
        </p>
        <p>
          <% @mod.tags.each do |tag| %>
              <span class="label label-default"><%= link_to tag, '#SORT BY THIS TAG#', class: 'tag-link' %></span>
          <% end %>
        </p>
      </div>
    </div>

    <div class="well">
      <div id="disqus_thread"></div>
      <script type="text/javascript">
          var disqus_shortname = 'kerbalmods';

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      </script>
    </div>
  </div>
</div>
