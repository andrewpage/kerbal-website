<% if homepage
     divClass = 'col-lg-3 col-md-6'
   else
     divClass = 'acol-sm-4 col-lg-4 col-md-4'
   end
%>

<div class="<%= divClass %>">
  <div class="thumbnail">
    <%= image_tag mod.thumbnail.url(:thumb) %>

    <div class="caption">
      <h4 width="75%" style="text-overflow: ellipsis;"><%= link_to mod.name, mod %></h4>

      <span class="game-version label label-info pull-right"><%= mod.version %></span>
      <p><%= mod.description_short %></p>
    </div>

    <div class="ratings">
      <p class="pull-right"><%= mod.download_count %> downloads</p>
      <p>
        <%= mod.vote_tally %> likes
      </p>
    </div>
  </div>
</div>